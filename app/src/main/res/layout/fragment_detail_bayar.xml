<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kasir.DetailBayarFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_layouttransaksi"
        android:background="@color/viewfinder_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"



        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tv_barkod"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Code"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_nama"
            android:layout_toRightOf="@+id/tv_barkod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Nama"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_jml"
            android:layout_toLeftOf="@id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Jumlah"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="Total"
            android:textAlignment="viewEnd"
            android:textSize="16sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_list_request"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"

        android:clipToPadding="false" />

    <TextView
        android:id="@+id/tv_totalBayar"
        android:layout_gravity="bottom"
        android:textAlignment="center"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Bayar ?"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btn_bayar"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="BAYAR TRANSAKSI"
        android:textSize="24sp" />
    />

</FrameLayout>