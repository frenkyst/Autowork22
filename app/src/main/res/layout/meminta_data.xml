<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout"
    android:background="@color/puteh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/birunom"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Nama"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/tap_edit"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@color/abang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_popup_edit"
            />


    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_barkod"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Code"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_jml"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Jumlah"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_jml"
                android:textColor="@color/ijo"
                android:textStyle="bold"
                android:text="Harga"
                android:textSize="18sp" />

        </RelativeLayout>




</LinearLayout>