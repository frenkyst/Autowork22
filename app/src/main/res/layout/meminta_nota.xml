<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layoutnota"
    android:background="@color/abu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:id="@+id/ll_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >




        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="Nama"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_jml"
            android:layout_below="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="J"

            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_kali"
            android:layout_alignBaseline="@+id/tv_jml"
            android:layout_toRightOf="@+id/tv_jml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="x"

            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_hargaJual"
            android:layout_toRightOf="@+id/tv_kali"
            android:layout_alignBaseline="@+id/tv_jml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="Harga"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_total"
            android:layout_alignBaseline="@+id/tv_jml"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:text="Total"
            android:textAlignment="viewEnd"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>