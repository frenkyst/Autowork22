<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layoutHistori"
    android:background="@color/puteh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_kodeTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/birunom"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Kode Transaksi"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/tap_edit"
            android:layout_centerInParent="true"
            android:background="@color/puteh"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_popup_edit"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Nama Karyawan"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv11"
            android:layout_toRightOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_namaKaryawan"
            android:layout_toRightOf="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Karyawan"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_below="@+id/tv1"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Nama Kasir"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv22"
            android:layout_toRightOf="@+id/tv2"
            android:layout_below="@+id/tv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_namaKasir"
            android:layout_toRightOf="@+id/tv22"
            android:layout_below="@+id/tv_namaKaryawan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kasir"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_below="@+id/tv2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Total Transaksi"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv33"
            android:layout_toRightOf="@+id/tv3"
            android:layout_below="@+id/tv22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": "
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_totalTransaksi"
            android:layout_toRightOf="@+id/tv33"
            android:layout_below="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Transaksi"
            android:textSize="16sp" />


    </RelativeLayout>

</LinearLayout>